<script>

	function onButtonLoginClicked() {
		if (validationForm()) {
			location.href = '@Url.Action("Index", "Home", new { area = "Admin" })';
		}
	}

	function validationForm() {
		var isvalid = true;

		var fieldEmail = $("#fieldEmail").dxTextBox("instance").option("value");
		var vadEmail = document.getElementById("vadEmail");

		var fieldPassword = $("#fieldPassword").dxTextBox("instance").option("value");
		var vadPassWord = document.getElementById("vadPassWord");

		if (fieldEmail === null || fieldEmail === undefined || fieldEmail === '') {
			_message = "Bạn chưa nhập <{0}>";
			vadEmail.innerHTML = _message.replace('<{0}>', 'Email');
			isvalid = false;
		}
		else {
			vadEmail.innerHTML = '';
		}

		if (fieldPassword === null || fieldPassword === undefined || fieldPassword === '') {
			_message = "Bạn chưa nhập <{0}>";
			vadPassWord.innerHTML = _message.replace('<{0}>', 'Password');
			isvalid = false;
		}
		else {
			vadPassWord.innerHTML = '';
		}

		return isvalid;
	}

</script>